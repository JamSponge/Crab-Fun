    BulletBarAlpha += (0 - BulletBarAlpha) *0.01;
    BulletBarScale += (0 - BulletBarScale) *0.05;
    BulletBarRotation += (35 - BulletBarRotation) *0.5;
    }
    //MAXMIN VARIABLES
